<!DOCTYPE html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<title>Payment</title>
	</head>
	<body>
		<div class="container">
			<h2>Order Summary</h2>

			<table>
				<tr>
					<th>Dish</th>
					<th>Quantity</th>
					<th>Price</th>
				</tr>
				<% let price = 0; mergedItems.forEach((item) => { %>
				<tr>
					<td><%= item.dish_name %></td>
					<td><%= item.quantity %></td>
					<td>$<%= (item.price * item.quantity).toFixed(2) %></td>
				</tr>
				<% price += item.price * item.quantity; %> <% }); %>
			</table>

			<div class="delivery-fee">Delivery Fee: $10.00</div>
			<div class="total">Total: $<%= (price + 10).toFixed(2) %></div>

			<form style="display: inline" action="/customer/pay" method="post">
				<input type="hidden" name="orderId" value="<%= orderId %>" />
				<button class="pay-btn" type="submit">Pay Now</button>
			</form>
		</div>
	</body>
</html>
