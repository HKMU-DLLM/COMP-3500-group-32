<!DOCTYPE html>
<html>
	<head>
		<title>Restaurants</title>
		<link
			href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css"
			rel="stylesheet" />
		<a
			href="/customer/order"
			class="btn btn-success position-fixed d-flex align-items-center justify-content-center gap-2"
			style="top: 20px; right: 20px; z-index: 1000; padding: 10px 16px">
			<i class="bi bi-bag"></i>
			<span>My Order</span>
		</a>
	</head>
	<body class="bg-light">
		<div class="container py-5">
			<h1 class="mb-4 text-center">Restaurants</h1>

			<div class="row g-4">
				<% restaurants.forEach(r => { %>
				<div class="col-md-4">
					<div class="card shadow-sm h-100">
						<div class="card-body">
							<h5 class="card-title"><%= r.name %></h5>
							<p class="card-text text-muted"><%= r.cuisine_type %></p>
							<a href="/customer/menu/<%= r.name %>" class="btn btn-primary w-100"
								>View Menu</a
							>
						</div>
					</div>
				</div>
				<% }) %>
			</div>
		</div>
	</body>
</html>
